<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputtitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputtitle" %><br>
  
  <label for="inputopinion">Opinion</label><br>
  <%= f.text_area :body, autofocus: true, id:"inputopinion" %><br>
  <%= f.submit "Update Book" %>
<% end %>
<div class="tag">
 <%= link_to "Show", book_path(@book.id) %>
  |
  <a class = "back" href = "/books">Back</a>
</div>